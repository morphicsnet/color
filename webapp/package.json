{
  "name": "oklab-webapp",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -F @oklab/app dev",
    "typecheck": "pnpm -r typecheck",
    "test": "vitest --reporter=default",
    "lint": "eslint . --ext .ts,.tsx",
    "preview": "pnpm -F @oklab/app preview",
    "e2e": "playwright test",
    "e2e:install": "playwright install"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "prettier": "^3.3.3",
    "vitest": "^2.1.4",
    "@vitest/ui": "^2.1.4",
    "jsdom": "^24.0.0",
    "fast-check": "^3.18.0",
    "ajv": "^8.17.1",
    "@types/node": "^20.0.0",
    "@playwright/test": "^1.48.0"
  },
  "engines": {
    "node": ">=18"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions"
  ]
}
